<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ramonaza.androidzadikapplication" >

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>



    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name="org.ramonaza.androidzadikapplication.events.backend.services.EventUpdateService"
            android:enabled="true" />
        <service
            android:name="org.ramonaza.androidzadikapplication.events.backend.services.EventNotificationService"
            android:enabled="true" />
        <receiver android:name="org.ramonaza.androidzadikapplication.helpers.backend.AutoStart"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>
        <activity
            android:name="org.ramonaza.androidzadikapplication.frontpage.ui.activities.FrontalActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.ui.activities.ContactDataActivity"
            android:label="@string/title_activity_layer2"
            android:parentActivityName="org.ramonaza.androidzadikapplication.frontpage.ui.activities.FrontalActivity">
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.songs.ui.activities.SongDataActivity"
            android:label="@string/title_activity_song_data"
            android:parentActivityName="org.ramonaza.androidzadikapplication.frontpage.ui.activities.FrontalActivity">
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.events.ui.activities.EventPageActivity"
            android:label="@string/title_activity_event_page"
            android:parentActivityName="org.ramonaza.androidzadikapplication.frontpage.ui.activities.FrontalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.frontpage.ui.activities.FrontalActivity" />
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.settings.ui.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity"
            android:label="@string/title_activity_rides"
            android:launchMode="singleTop"
            android:parentActivityName="org.ramonaza.androidzadikapplication.frontpage.ui.activities.FrontalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.frontpage.ui.activities.FrontalActivity" />
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.ui.activities.AddCustomContactActivity"
            android:label="@string/title_activity_add_custom_contact"
            android:parentActivityName="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity" />
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.rides.ui.activities.PresentListedContactActivity"
            android:label="@string/title_activity_present_listed_contact"
            android:launchMode="singleTop"
            android:parentActivityName="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity" />
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.rides.ui.activities.AddCustomDriverActivity"
            android:label="@string/title_activity_add_custom_driver"
            android:parentActivityName="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity" />
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesDriverManipActivity"
            android:label="@string/title_activity_rides_driver_manip"
            android:launchMode="singleTop"
            android:parentActivityName="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity" />
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.rides.ui.activities.AddPassengerToDriverActivity"
            android:label="@string/title_activity_add_passenger_to_driver"
            android:parentActivityName="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesDriverManipActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesDriverManipActivity" />
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RemovePassengerFromDriverActivity"
            android:label="@string/title_activity_remove_passenger_from_car"
            android:parentActivityName="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesDriverManipActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesDriverManipActivity" />
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.rides.ui.activities.DisplayRidesActivity"
            android:label="@string/title_activity_display_rides"
            android:parentActivityName="org.ramonaza.androidzadikapplication.people.rides.ui.activities.ConfigureRidesDisplayActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.people.rides.ui.activities.ConfigureRidesDisplayActivity" />
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesContactManipActivity"
            android:label="@string/title_activity_rides_contact_manip"
            android:parentActivityName="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity" />
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.rides.ui.activities.AddContactDriverActivity"
            android:label="@string/title_activity_add_preset_driver"
            android:parentActivityName="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity" />
        </activity>
        <activity
            android:name="org.ramonaza.androidzadikapplication.people.rides.ui.activities.ConfigureRidesDisplayActivity"
            android:label="@string/action_rides_generate"
            android:parentActivityName="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ramonaza.androidzadikapplication.people.rides.ui.activities.RidesActivity" />
        </activity>
    </application>

</manifest>
